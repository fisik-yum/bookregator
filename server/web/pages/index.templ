package pages

import (
	"net/http"
	"server/web/shared"
)

type Index struct {
	shared.Base
}

func NewIndex() *Index {
	return &Index{shared.NewBase("Bookregator")}
}
func (i *Index) Render(w http.ResponseWriter, r *http.Request) {
	i.Html().Render(r.Context(), w)
}

templ (i *Index) Html() {
	@i.Base.Html() {
		<div class="jumbotron w-50 mx-auto">
			<h1 class="display-4">bookregator</h1>
			<p class="lead">
				the book review aggregator 
			</p>
			<form class="d-flex" method="get" action="book">
				<input class="form-control me-2" name="olid" id="olid" type="search" placeholder="Search OLID"/>
			</form>
		</div>
	}
}
